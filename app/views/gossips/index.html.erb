<%= link_to "Create Gossip", new_gossip_path, :class => 'btn btn-primary' %>
<div class="container-fluid d-flex flex-wrap justify-content-center">
    <% @gossips.each do |gossip| %>
        <div class="card p-2 m-1" style="width: 22rem;">
            <div class="card-body">
                <h3 class="card-text"><%= link_to gossip.user.first_name, user_path(gossip.user.id) %></h3>
  
                <h5 class="card-text"><%= gossip.title %></h5>
                <p> 
                    <%= link_to "VIEW", gossip_path(gossip.id), :class => "btn btn-success" %>
                    <%= link_to "EDIT", edit_gossip_path(gossip.id), :class => "btn btn-primary" %>
                    <%= button_to "DEL", gossip_path(gossip.id), :class => "btn btn-danger", :confirm => "Are you sure?", :method => :delete %> 
                    <%# &#128465; %>
                </p>
            </div>
        </div>
    <% end %>
</div>