<style>
.text-center
{
  width: 700px;
}
.global
{
  display: flex;
  justify-content: center;
}
</style>
<div class="global">
  <div class="text-center">
    <h2>Edit the gossip:</h2><br>
    <%= form_for @gossip do |form|%>
    
      <div class="form-group">
      <label><u> Title </u></label>
      <%= form.text_field :title, class: "form-control" %>
      <br><br>

      <label><u> Content </u></label>
      <%= form.text_area :content, rows: 6, class: "form-control" %>
      <br><br>

      <%= submit_tag "Update gossip", class: 'btn btn-outline-primary btn-sm' %>
    <% end %>
  </div>
</div>
