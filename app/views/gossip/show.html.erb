<div class="container-fluid d-flex flex-wrap justify-content-center"> 
    <div class="Gossip">
        <h4>GOSSIP:</h4>
        <p> Author : <%= link_to @gossip.user.first_name, user_path(@gossip.user.id) %> <%= link_to @gossip.user.last_name, user_path(@gossip.user.id) %>
        &nbsp City : <%= link_to @gossip.user.city.name, city_path(@gossip.user.city.id) %></p>
        <p>  Title : <span class="title"><%= @gossip.title %></span></p>
        <p>Content : <span class="content"><h4><%= @gossip.content %></span></h4><br></p>
    </div>
</div>

<div class="container-fluid d-flex flex-wrap justify-content-center">
    <h4>COMMENTS:</h4>
    <div class="container-fluid d-flex flex-wrap justify-content-center">
        <% @comments.each do |comment| %>
            <div class="card p-2 m-1" style="width: 22rem;">
                <div class="card-body">
                    <h3 class="card-text"><%= comment.user.first_name %></h3>
                    <p class="card-text"><%= comment.content %></p>
                    <p> <%= link_to "EDIT", edit_comment_path(comment.id), :class => "btn btn-primary" %>
                        <%= button_to "DEL", comment_path(comment.id), :class => "btn btn-danger", :confirm => "Are you sure?", :method => :delete %> 
                        &#128465;
                    </p>
                </div>
            </div>
        <% end %>
    </div>
    <%= link_to "Create Comment", new_comment_path, :class => 'btn btn-primary' %>
</div>